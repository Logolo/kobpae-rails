<% content_for :title, t(:users) -%>

<div id="header">
	<div class="container">
		<h1><%= content_for :title %></h1>
	</div>
</div>

<div id="body">
	<div class="container">
		<div id="sidebar" class="span-6">
			<ul>
				<li><%= link_to image_tag('user_add.png', :alt => t(:create_a_new_user)) + t(:create_a_new_user), new_user_path %></li>
			</ul>
		</div>
		<div class="span-18 last">
			<table>
				<tr>
					<th></th>
					<th><%= t :name %></th>
					<th><%= t :email %></th>
					<th></th>
				</tr>
			<% @users.each do |user| -%>
				<tr class="<%= cycle('even','odd') %>">
					<td><%= image_tag('user.png') %></td>
					<td class="user_name"><%= user.name %></td>
					<td class="user_email"><%= user.email %></td>
					<td>
						<%= link_to image_tag('edit.png', :alt => t(:edit)), edit_user_path(user), :title => t(:edit) %>&nbsp;
					<% unless user.is_admin -%>
						<%= link_to image_tag('delete.png', :alt => t(:delete_item)), user_path(user), :method => :delete, :confirm => t(:are_you_sure), :title => t(:delete_item) %>
					<% end -%>
					</td>
				</tr>
			<% end -%>
			</table>
		</div>
	</div>
</div>
