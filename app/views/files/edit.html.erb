<% content_for :title, t(:edit_document) -%>

<div id="header">
	<div class="container">
		<h1><%= content_for :title %></h1>
	</div>
</div>

<div id="body">
	<div class="container">
		<div id="sidebar" class="span-6">
			<ul>
				<li><%= link_to t(:back), folder_url(@folder) %></li>
			</ul>
		</div>
		<div class="span-18 last">
			<%= form_for @file, :url => { :action => 'update' } do |f| %>
				<%= f.error_messages %>
				<p>
					<%= f.label :name %>:<br />
					<%= f.text_field :attachment_file_name %>
				</p>
				<p>
					<%= f.label :content %><br />
					<%= f.cktext_area :content %>
				</p>
				<p>
					<%= f.submit t(:save) %> &nbsp; &mdash; &nbsp;
				</p>
			<% end %>
		</div>
	</div>
</div>